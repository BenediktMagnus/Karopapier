{
    "name": "karopapier",
    "version": "0.2.0",
    "description": "Karopapier, an online drawing tool for the creation of simple two-dimensional maps.",
    "author": "Benedikt Magnus",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/BenediktMagnus/Karopapier.git"
    },
    "engines": {
        "node": ">=12.0.0"
    },
    "dependencies": {
        "bcrypt": "5.0.1",
        "better-sqlite3": "7.4.1",
        "compression": "1.7.4",
        "express": "4.17.1",
        "socket.io": "4.1.2",
        "socket.io-client": "4.1.2"
    },
    "devDependencies": {
        "@types/bcrypt": "5.0.0",
        "@types/better-sqlite3": "5.4.1",
        "@types/compression": "1.7.0",
        "@types/express": "4.17.12",
        "@types/node": "14.17.3",
        "@typescript-eslint/eslint-plugin": "4.27.0",
        "@typescript-eslint/parser": "4.27.0",
        "eslint": "7.28.0",
        "typescript": "4.3.2"
    },
    "files": [
        "build",
        "config",
        "data",
        "files"
    ],
    "main": "build/backend/main.js",
    "scripts": {
        "build": "npm run build:backend && npm run build:frontend",
        "build:backend": "npx tsc --build src/backend/tsconfig.json",
        "build:frontend": "npx tsc --build src/frontend/tsconfig.json",
        "clean": "rm -r build",
        "lint": "npm run lint:backend && npm run lint:frontend",
        "lint:backend": "cd src/backend && npx eslint .",
        "lint:frontend": "cd src/frontend && npx eslint .",
        "prestart": "npm run build",
        "prepack": "npm run clean && npx tsc -p src/backend/tsconfig.release.json && npx tsc -p src/frontend/tsconfig.release.json",
        "start": "node build/backend/main.js"
    },
    "private": true
}
