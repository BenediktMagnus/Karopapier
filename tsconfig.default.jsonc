{
    "compilerOptions": {
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "allowJs": false,
        "esModuleInterop": true,

        "sourceMap": true,
        "removeComments": true,

        "incremental": true
    },
    "include": [
        "src/**/*.ts"
    ]
}
